{
    "$schema": "https://json-schema.org/draft/2020-12/schema#",
    "$id": "https://pleiades.stoa.org/linkedplaces/schema/timespans.json",
    "title": "timespans",
    "type": "array",
    "minItems": 1,
    "items": {
        "$ref": "#/$defs/timespan"
    },
    "$defs": {
        "date": {
            "type": "string",
            "pattern": "^-?\\d{4}(-\\d{2}(-\\d{2})?)?$"
        },
        "terminus": {
            "type": "object",
            "minProperties": 1,
            "maxProperties": 3,
            "properties": {
                "in": {
                    "$ref": "#/$defs/date"
                },
                "earliest": {
                    "$ref": "#/$defs/date"
                },
                "latest": {
                    "$ref": "#/$defs/date"
                }
            },
            "additionalProperties": false,
            "anyOf": [{
                    "required": [
                        "in"
                    ]
                },
                {
                    "required": [
                        "earliest"
                    ]
                },
                {
                    "required": [
                        "latest"
                    ]
                }
            ]
        },
        "timespan": {
            "title": "timespan",
            "description": "LinkedPlaces: A 'timespan' must have a start; if end is omitted, the timespan is interpreted as the interval described by the start.",
            "type": "object",
            "required": [
                "start"
            ],
            "properties": {
                "start": {
                    "$ref": "#/$defs/terminus"
                },
                "end": {
                    "$ref": "#/$defs/terminus"
                }
            },
            "additionalProperties": false
        }
    }
}